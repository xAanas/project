{% extends '::base.html.twig' %}
{% block title %}Demandes{% endblock %}
{% block body -%}
    <div class="container">
    <h1>Demandes list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th width='8%'>Au nom de</th>
                <th>Client</th>
                <th>Site</th>
                <th>Date limite</th>
                <th>Lien</th>
                <th>Type</th>
