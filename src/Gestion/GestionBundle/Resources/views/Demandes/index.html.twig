                <th>Date du post</th>
                <th>Accueil</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('demandes_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.auNomDe }}</td>
                <td>{{ entity.client }}</td>
                <td>{{ entity.site }}</td>
                <td>{% if entity.dateLimite %}{{ entity.dateLimite|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>5 fichiers</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.avancement }}</td>
                <td>{% if entity.datePosteDemande %}{{ entity.datePosteDemande|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.accueil }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('demandes_show', { 'id': entity.id }) }}">DÃ©tails</a>
                    </li>
                    <li>
                        <a href="{{ path('demandes_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

